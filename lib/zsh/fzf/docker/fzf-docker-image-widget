#!bin/zsh

# Select a docker container to remove
function fzf-docker-image-widget() {

  local fzfOut

  local tmp_file
  if tmp_file="$(mktemp "/tmp/${basename}".XXXXXX)"; then
    printf '' > "${tmp_file}"
  fi

  fzfOut=$(dil | fzf \
    --header="Docker Images: 竚シ 竚エ 竚イ 竚コ" \
    --height ~95% \
    --expect 'ctrl-t,ctrl-v' \
    --prompt "created> " \
    --bind "ctrl-g:reload(
              if grep -q 'reverse' \"${tmp_file}\"; 
              then 
                  printf '' > \"${tmp_file}\"; 
                  dil -s c -r; 
              else 
                print 'reverse' > \"${tmp_file}\"; 
                dil -s c; 
              fi
            )+change-prompt(created> )" \
    --bind 'ctrl-c:reload(
              if grep -q 'reverse' \"${tmp_file}\"; 
              then 
                  printf '' > \"${tmp_file}\"; 
                  dil -s r -r; 
              else 
                print 'reverse' > \"${tmp_file}\"; 
                dil -s r; 
              fi
            )+change-prompt(repo> )' \
    --bind 'ctrl-r:reload(
              if grep -q 'reverse' \"${tmp_file}\"; 
              then 
                  printf '' > \"${tmp_file}\"; 
                  dil -s s -r; 
              else 
                print 'reverse' > \"${tmp_file}\"; 
                dil -s s; 
              fi
            )+change-prompt(size> )' \
    --preview 'dii {1}' \
    --preview-window 'right,noborder,wrap,68%,<100(50%)'
  )

  local key=$(head -1 <<< "$fzfOut")
  local selections=$(tail -n +2 <<< "$fzfOut") # get all lines after the first line
  local selection1=$(head -1 <<< "$selections")

  local selectedId=$(gawk '{print $1}' <<< "$selection1")

  if [ $selectedId ]; then
    if [ "$key" = ctrl-t ]; then
      dii $selectedId
    elif [ "$key" = ctrl-v ]; then
      dii -v $selectedId
    else
      local selectedIds=$(echo $selections | choose 0 | join-lines)
      LBUFFER+=$selectedIds
    fi
  fi

  rm -f "${tmp_file}" &> /dev/null
  zle reset-prompt
}
