#!/bin/zsh

function ktl(){
  # kitty ls
  local verbose result

  while getopts 'v' opt; do
    case "$opt" in
      v) verbose=true;;
    esac
  done
  shift $(($OPTIND - 1))

  local result=$(kitty @ ls)

    local jqQuery=$(cat <<-EOF
   include "pad";
   include "colour";
   include "boolean";
   def _tab:
     "\(.id|rp(4)|_g(.)) \(.title|rp(21)|_purple(.)) ðŸ”ï¸\(.is_focused|bool(.))     \(.layout|rp(12)|_orange(.))";
   def _window:
     "\(.id | lp(2) | _y(.)) \(.title|rp(21)) ðŸ”ï¸\(.is_focused|bool(.))   \(.is_self|bool(.)) \(.cwd|trunc(20)|rp(20)|__(.)) ðŸ¡\(.env) \(.cmdline | join(" ") | _tacha(.))";
   def _fgProcess:
     "\(.cmdline | join(" ") | trunc(30) | lp(30)| _tacha(.)) \(.cwd|__(.))";

      (
        .[] |
        .tabs[] | _tab,
          ( .windows[] | "  "+_window,
              (.foreground_processes[] | "    "+_fgProcess  )
          )
      )
EOF
)
        # select(.is_focused == true) |
        # .tabs[] |
        # "\(.id|rp(2)) \(.title|rp(18)) \(.layout|rp(12)) \(.is_focused|bool(.)) \n"+
        #   "\(.windows | map(_window)[])"

  if [ -n "$verbose" ]; then
    jq . <<< $result
  else
    jq --raw-output -L "~/.config/jq" "$jqQuery" <<< $result
  fi
}
