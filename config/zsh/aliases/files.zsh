# zsh boot
alias zshr='nvim ~/.dotfiles/config/zsh-boot/zshrc'
alias zshe='nvim ~/.dotfiles/.env'
alias zshz='nvim ~/.config/zsh/.zshenv'

# scratch
alias aes='nvim ~/certis/docs/wiki/scratch.md'
