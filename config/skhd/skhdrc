# https://github.com/koekeishiya/skhd/issues/1
# hyper (shift + alt + ctrl + cmd)
# meh (shift + alt + ctrl)

# meh - x : toggle-hide-window "Toggl Track"

# Space
# space create/destroy
hyper - c : yabai -m space --destroy
hyper - l : yabai -m space --create
# go to space shortcuts
# hyper - space : yabai -m space --focus recent # focus previous workspace
rshift + ralt + rctrl - space : yabai -m space --focus recent # focus previous workspace
# hyper - b : yabai -m space --focus recent # focus previous workspace
# hyper - b: yabai -m space --balance # balance size of windows
rshift + ralt + rctrl + lshift - g : yabai -m space --focus prev || yabai -m space --focus last # previous
rshift + ralt + rctrl + lshift - r : yabai -m space --focus next || yabai -m space --focus first # next

# Focus previous/next display by arrangement index
rshift + ralt + rctrl - g : yabai -m display --focus prev || yabai -m display --focus last
rshift + ralt + rctrl - r : yabai -m display --focus next || yabai -m display --focus first

# go to space
# hyper - 0x1C : yabai -m space --focus 1 # *
rshift + ralt + rctrl + lshift - 0x1C : yabai -m space --focus 1 # *
rshift + ralt + rctrl + lshift - 0x1D : yabai -m space --focus 2 # )
rshift + ralt + rctrl + lshift - 0x18 : yabai -m space --focus 3 # +
rshift + ralt + rctrl - 0x1E : yabai -m space --focus 4 # ]
rshift + ralt + rctrl + lshift - 0x12 : yabai -m space --focus 5 # !
rshift + ralt + rctrl + lshift - 0x14 : yabai -m space --focus 6 # *
rshift + ralt + rctrl - e: yabai -m space --focus 7
rshift + ralt + rctrl - u: yabai -m space --focus 8
rshift + ralt + rctrl - p: yabai -m space --focus 9

rshift + ralt + rctrl - 1 : yabai -m space --focus 1
rshift + ralt + rctrl - 2 : yabai -m space --focus 2
rshift + ralt + rctrl - 3 : yabai -m space --focus 3
rshift + ralt + rctrl - 4 : yabai -m space --focus 4
rshift + ralt + rctrl - 5 : yabai -m space --focus 5
rshift + ralt + rctrl - 6 : yabai -m space --focus 6
rshift + ralt + rctrl - 7 : yabai -m space --focus 7
rshift + ralt + rctrl - 8 : yabai -m space --focus 8
rshift + ralt + rctrl - 9 : yabai -m space --focus 9

rshift + ralt + rctrl + lshift + lctrl - s : yabai -m space --display 2 # *

# Windows
# misc
# hyper - f : yabai -m window --toggle float # toggle whether the focused window should be tiled (only on bsp spaces)
rshift + ralt + rctrl - d : yabai -m window --space recent; yabai -m space --focus recent # move focused window to previous workspace
# misc size
rshift + ralt + rctrl - return : yabai -m window --toggle zoom-fullscreen # enter fullscreen mode for the focused container

# move floating windows left and right
rshift + ralt + rctrl - left : yabai -m window --toggle float; yabai -m window --grid 1:2:0:0:1:1
rshift + ralt + rctrl - right : yabai -m window --toggle float; yabai -m window --grid 1:2:1:0:1:1
# grid notation - rows/colums: start-x/start-y (0 based): width/height 
# rshift + ralt + rctrl - down: yabai -m window --toggle float; yabai -m window --grid 1:6:1:1:4:1 # centre (wide format for browsers)
rshift + ralt + rctrl - down: yabai -m window --toggle float; yabai -m window --grid 20:5:2:1:1:18 # toggl centre

# move windows around
alt + cmd - h : yabai -m window --warp west
alt + cmd - t : yabai -m window --warp south
alt + cmd - n : yabai -m window --warp north
alt + cmd - s : yabai -m window --warp east
# change focus
# meh - tab : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus stack.first || yabai -m window --focus first # only works for bsp windows, not floating windows
# hyper - 0x1B : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus stack.first || yabai -m window --focus first # only works for bsp windows, not floating windows
rshift + ralt + rctrl - 0x2C : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus stack.first || yabai -m window --focus first # only works for bsp windows, not floating windows

rshift + ralt + rctrl - h : yabai -m window --focus west
rshift + ralt + rctrl - t : yabai -m window --focus south
rshift + ralt + rctrl - n : yabai -m window --focus north
rshift + ralt + rctrl - s : yabai -m window --focus east
# shift window in current workspace
rshift + ralt + rctrl - m : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
rshift + ralt + rctrl - w : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
rshift + ralt + rctrl - v : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
rshift + ralt + rctrl - z : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
# move focused window to next/prev workspace
alt + cmd - 1 : yabai -m window --space 1 && yabai -m space --focus 1
alt + cmd - 2 : yabai -m window --space 2 && yabai -m space --focus 2
alt + cmd - 3 : yabai -m window --space 3 && yabai -m space --focus 3
alt + cmd - 4 : yabai -m window --space 4 && yabai -m space --focus 4
alt + cmd - 5 : yabai -m window --space 5 && yabai -m space --focus 5
alt + cmd - 6 : yabai -m window --space 6 && yabai -m space --focus 6
alt + cmd - 7 : yabai -m window --space 7 && yabai -m space --focus 7
alt + cmd - 8 : yabai -m window --space 8 && yabai -m space --focus 8
alt + cmd - 9 : yabai -m window --space 9 && yabai -m space --focus 9

# # toggle whether the focused window should have a border
# yabai -m window --toggle border
# # toggle whether the focused window should be shown on all spaces
hyper - h : yabai -m window --toggle sticky # show on all spaces?
hyper - l : yabai -m window --toggle float # should be tiled?

# set insertion point in focused container
# alt + ctrl - h : yabai -m window --insert west
# alt + ctrl - j : yabai -m window --insert south
# alt + ctrl - k : yabai -m window --insert north
# alt + ctrl - l : yabai -m window --insert east

# cycle
# hyper - e : yabai -m window --focus next || yabai -m window --focus first
# hyper - u : yabai -m window --focus prev || yabai -m window --focus last

# # mirror
# alt + shift - y : yabai -m space --mirror y-axis
# alt + shift - x : yabai -m space --mirror x-axis

# change layout of desktop
hyper - t : yabai -m space --layout bsp
hyper - n : yabai -m space --layout float
hyper - s : yabai -m space --layout stack

# cycle through stack windows - use meh - escape?
# position stack movement keys in an easier to reach row, since cycle has other similar keymaps
hyper - r: yabai -m window --focus stack.next || yabai -m window --focus south || yabai -m window --focus stack.first
hyper - c : yabai -m window --focus stack.prev || yabai -m window --focus north || yabai -m window --focus stack.last
# cycle through all windows sorted by: coordinates -> space index -> display index
hyper - w : yabai -m window --focus "$(yabai -m query --windows | jq -re "sort_by(.display, .space, .frame.x, .frame.y, .id) | map(select(.\"is-visible\" == true and .role != \"AXUnknown\")) | reverse | nth(index(map(select(.\"has-focus\" == true))) - 1).id")"
# cycle through all visible windows sorted by: coordinates -> display index
hyper - v : yabai -m window --focus "$(yabai -m query --windows | jq -re "sort_by(.display, .frame.x, .frame.y, .id) | map(select(.\"is-visible\" == true and .role != \"AXUnknown\")) | reverse | nth(index(map(select(.\"has-focus\" == true))) - 1).id")"

# close focused window
# alt - w : yabai -m window --close

# toggle window native fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen
