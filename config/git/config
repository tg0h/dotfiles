[core]
  pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  ; hyperlinks = true
  ; paging = never
  features = otter
    ; navigate-regex
    ; no-gitconfig
    ; inspect-raw-lines
    ; pager
    ; paging
    ; keep-plus-minus-markers
    ; line-buffer-size - performance
    ; parse-ansi
    ; raw
    ; relative-paths
    ; show-colors
    ; show-config
    ; show-syntax-themes
    ; show-themes
    ; show-syntax-themes
    ; syntax-theme - defaults to BAT_THEME env var
    ; tabs
    ; true-color
    ; word-diff-regex
[diff]
  tool = vimdiff
  ; https://git-scm.com/docs/git-diff#Documentation/git-diff.txt-dimmed-zebra
  ; only highlights moved blocks if they are 20 chars or more
  ; colorMoved = dimmed-zebra
  colorMoved = default
  ; if the moved block has indentation added, count it as a moved block 
  ; instead of an added block
  colorMovedWS = allow-indentation-change
[merge]
  tool = vimdiff
  conflictstyle = diff3
[pull]
  rebase = false
[difftool]
  prompt = false

; https://git-scm.com/docs/git-config
; If the pattern ends with /, ** will be automatically added.
[includeIf "gitdir:~/src/candy/"]
  path = config-work
[includeIf "gitdir:~/src/candy-main/"]
  path = config-work
[includeIf "gitdir:~/src/playground/"]
  path = config-work
[init]
  defaultBranch = main
; https://git-scm.com/docs/git-config#Documentation/git-config.txt-color
; bold dim ul blink reverse italic strike
; normal black red green yellow blue magenta cyan white default
; brightred brightyellow ... etc
;
; use tool terminal-colors -no to see 256 color codes
[color "status"]
  added = green
  updated = green normal bold
  changed = yellow 
  untracked = 170 bold
  branch = cyan
  nobranch = normal
  unmerged = red
  header = normal
[color "branch"]
  current = 46
  local = 214
  remote = 207
  ; remote = #ff0e8b

